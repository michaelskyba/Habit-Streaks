
{
    "name": "Habit Streaks+",
    "description": "Habit Streaks+ is an extension that will help you instill good habits into your life, while breaking bad habits.",
    "icons":
    {
        "128": "icon.png"
    },
    "manifest_version": 2,
    "version": "1.0",
    "browser_action":
    {
        "default_title": "Habit Streaks+",
        "default_popup": "popup.html"
    },
    "permissions":
    [
        "background",
        "storage",
        "notifications"
    ],
    "background":
    {
        "scripts": ["background.js"],
        "persistent": true
    }
}